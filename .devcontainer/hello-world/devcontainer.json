// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/cpp
{
	"name": "Hello World",
	"build": {
		"dockerfile": "Dockerfile"
	},
	"postCreateCommand": ".devcontainer/install.sh",
	// "postCreateCommand": ".devcontainer/hello-world/install.sh",
	
	// Features to add to the dev container. More info: https://containers.dev/features.
	// "features": {},

	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	// "forwardPorts": [],

	// Configure tool-specific properties.
	"customizations": {
		"vscode": {
			// Install VSCode Extensions onto remote container
			"extensions": [
				"dart-code.dart-code",
				"dart-code.flutter",
				"ms-vscode.cpptools",
				"ms-vscode.cpptools-extension-pack"
			],
			// Set zsh as shell
			"settings": {
                "terminal.integrated.defaultProfile.linux": "zsh",
                "terminal.integrated.profiles.linux": { "zsh": { "path": "/bin/zsh" } }
            }
		}
	},
	
	// Configure environment variables
	"containerEnv": {
		"ANDROID_HOME": "/tmp/android-sdk-linux"
	},

	"remoteEnv": {
		"PATH": "${containerEnv:PATH}:/tmp/flutter/bin"
	},
	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	"remoteUser": "vscode"
}
